<%= stylesheet_link_tag 'sessions', :media => "all" %>
<h1 class="h3 mb-3 font-weight-normal">ログイン</h1>
<%= form_for(:session, url: login_path) do |f| %>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "session-form-control", placeholder: "メールアドレス" %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "session-form-control", placeholder: "パスワード" %>
  <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block", style: "margin: auto" %>
<% end %>
<br>
まだ会員登録が済んでいない方は<%= link_to 'こちら', new_user_path %>
